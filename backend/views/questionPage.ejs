<h2><%= question.title %></h2>
<p><%= question.description %></p>

<h3>Submit Your Answer</h3>
<form action="/questions/<%= question._id %>/answer" method="POST">
    <textarea name="answer" required></textarea><br>
    <button type="submit">Submit Answer</button>
</form>

<h3>Answers</h3>
<% if (answers.length === 0) { %>
    <p>No answers yet. Be the first to answer!</p>
<% } else { %>
    <ul>
        <% answers.forEach(answer => { %>
            <li>
                <strong><%= answer.userId.username %>:</strong> <%= answer.answer %>
                <br><small>Posted on <%= new Date(answer.createdAt).toLocaleString() %></small>
            </li>
        <% }); %>
    </ul>
<% } %>